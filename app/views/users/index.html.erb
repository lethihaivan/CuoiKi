<% provide(:title, 'All users') %>
<h1>All users</h1>

		<div class="container emp-profile">
  <form method="post">
    <ul class="users">

      <div class="media">
        <div class="media-body">
          
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name </th>
                <th>Email</th>
                <th>Role</th>
                <th>Depaertment</th>
                <th>Date Join</th>
                <% if current_user.is_admin %> 
                 <th>Edit</th>
                <th>Delete</th>
                <th></th><% end %>
                <th></th>
                <th></th>
                <th></th>
              </tr>

            </thead>  
            <tbody>
             <% @users.each do |user| %>                       
             <tr>
              <td><%=   user.name %> </td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td><%= user.department_name %></td>
              <td><%= user.created_at  %></td>
              <% if current_user.is_admin %> 
              <td><%= link_to value="Edit Profile" ,edit_user_path(user),
                       class: 'btn btn-mini btn-success'%></td>
              <td><%= 
              link_to "Delete" , user_path(user), method: :delete , class: "btn btn-danger", data: {confirm: "Are you sure delete: #{user.name}???" }%>
              </td> <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </ul>
</form>
</div>
