<% provide(:title, 'All users') %>
<h1>All users</h1>
<ul class="users">
	<% @users.each do |user| %>
	<li>
		<%= gravatar_for user, size: 50 %>
		<%= link_to user.name, user %>|
		<%= user.email %>
		<% if current_user.is_admin %>
		<%= link_to "Delete" , user_path(user), method: :delete , class: "btn btn-danger", data: {confirm: "Are you sure delete: #{user.name}???" }%>
		
		<% end %>
		</li>
		<% end %>
		
	</ul>
		